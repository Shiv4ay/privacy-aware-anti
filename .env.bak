# -----------------------------
# Postgres / Database
# -----------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=privacy_docs
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
# canonical DB URL used by services
DATABASE_URL=postgresql://postgres:postgres123@postgres:5432/privacy_docs
# (optional duplicate if some code expects POSTGRES_URL)
POSTGRES_URL=${DATABASE_URL}

# -----------------------------
# Redis
# -----------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------
# MinIO (object storage)
# -----------------------------
MINIO_HOST=minio
MINIO_PORT=9000
# Use full URL form for endpoints (needed by many HTTP clients)
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=privacy-documents
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
# root/recovery credentials (same here)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
# Host-viewable minio URL for browser on host machine (useful for docs)
MINIO_HOST_URL=http://localhost:9000

# -----------------------------
# ChromaDB
# -----------------------------
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMADB_URL=http://chromadb:8000
CHROMADB_COLLECTION=privacy_documents

# -----------------------------
# Ollama / LLM
# -----------------------------
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=mistral
OLLAMA_EMBED_MODEL=mxbai-embed-large


# -----------------------------
# API & Worker
# -----------------------------
API_PORT=3001
WORKER_PORT=8001
WORKER_URL=http://worker:8001
NODE_ENV=development

# -----------------------------
# Security / App secrets
# -----------------------------
JWT_SECRET=jwtsecret123
QUERY_HASH_SALT=hashsalt123

# -----------------------------
# Frontend (Vite environment variables)
# -----------------------------
# Vite requires VITE_* prefix — these are available in import.meta.env
VITE_API_URL=http://api:3001
VITE_MINIO_ENDPOINT=http://minio:9000
VITE_CHROMA_ENDPOINT=http://chromadb:8000
VITE_OLLAMA_ENDPOINT=http://ollama:11434

# Legacy CRA names (not used by Vite) — safe to keep if some scripts expect them
REACT_APP_API_URL=http://api:3001
REACT_APP_MINIO_ENDPOINT=http://minio:9000
REACT_APP_CHROMA_ENDPOINT=http://chromadb:8000
REACT_APP_OLLAMA_ENDPOINT=http://ollama:11434

# -----------------------------
# CORS
# -----------------------------
# comma-separated list of allowed origins (backend may parse CORS_ORIGINS)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173
CORS_ORIGIN=http://localhost:3000

# -----------------------------
# Other
# -----------------------------
TOP_K=5
