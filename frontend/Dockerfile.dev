FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm ci

# Copy config files only (source will be mounted as volume)
COPY vite.config.js ./
COPY tailwind.config.js ./
COPY postcss.config.js ./

# Expose Vite dev server port
EXPOSE 3000

# Enable host 0.0.0.0 so it's accessible from outside container
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
